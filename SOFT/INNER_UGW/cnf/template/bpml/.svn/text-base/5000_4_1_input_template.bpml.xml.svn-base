<script type="text/javascript"  defer="true">
	function Show()
	{
		try
		{
			var appsel = document.getElementById("picmode");
			var appid = appsel.options(appsel.selectedIndex).value;
			var picsrc = document.getElementById("picsrc");
			
			var sl = "<label>上传:</label> <input type=\"file\" name=\"picsrc\" class=\"input_para\" />";
			var sn = "<label>网址:</label> <input type=\"text\" name=\"picsrc\" class=\"input_para\" />"
			if(appid == 2)
			{
				picsrc.innerHTML = sn;
			}
			else
			{
				picsrc.innerHTML = sl;
			}
		
		}catch(exp){alert(exp.descript);};
	}
</script>
