		<service name="db_content" type="mysql_node" desc="">
			<variables>				
				<variable name="database" value="db_content" desc="">database name</variable>
				<variable name="host" value="172.27.0.232" desc="">port</variable>
				<variable name="port" value="3306" desc="">port</variable>
				<variable name="user" value="qzone" desc="">user name</variable>
